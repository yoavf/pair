{
	"name": "@yoavf/pair",
	"version": "0.1.1",
	"description": "Pair is a CLI utility to run two Claude instances in pair programming mode",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "tsx src/index.ts",
		"watch": "tsc --watch",
		"lint": "biome lint src/",
		"format": "biome format --write src/",
		"check": "biome check --write src/",
		"prepare": "husky",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:unit": "vitest run test/unit",
		"test:integration": "RUN_INTEGRATION_TESTS=true vitest run test/integration",
		"test:coverage": "vitest run --coverage",
		"preview": "node scripts/run-preview.js"
	},
	"bin": {
		"pair": "./dist/index.js"
	},
	"keywords": [
		"claude",
		"ai",
		"pair-programming",
		"pair",
		"cli"
	],
	"author": "",
	"license": "Apache-2.0",
	"dependencies": {
		"@anthropic-ai/claude-code": "^1.0.0",
		"@anthropic-ai/sdk": "^0.62.0",
		"@modelcontextprotocol/sdk": "^1.18.0",
		"ink": "^4.4.1",
		"marked": "^15.0.12",
		"marked-terminal": "^7.3.0",
		"react": "^18.2.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/marked-terminal": "^6.1.1",
		"@types/node": "^20.10.0",
		"@types/react": "^18.2.0",
		"husky": "^9.1.7",
		"tsx": "^4.6.2",
		"typescript": "^5.3.3",
		"vitest": "^2.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
